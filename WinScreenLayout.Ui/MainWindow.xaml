<Window x:Class="WinScreenLayout.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinScreenLayout"
        Height="360"
        Width="520"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom"
                Orientation="Vertical">
            <CheckBox x:Name="RestoreCheck"
                      Content="Restore before apply"
                      IsChecked="True"
                      Margin="0,10,0,5"/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Content="Save"
                        Width="90"
                        Margin="0,0,5,0"
                        Click="Save_Click"/>
                <Button Content="Apply"
                        Width="90"
                        Margin="0,0,5,0"
                        Click="Apply_Click"/>
                <Button Content="Delete"
                        Width="90"
                        Click="Delete_Click"/>
            </StackPanel>
        </StackPanel>

        <ListBox x:Name="LayoutsList"
                 FontSize="14"/>
    </DockPanel>
</Window>
